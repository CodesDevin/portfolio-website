function getCurrentTime(){const dateOptions={timeZone:"America/New_York"};const cDate=new Date();const timeOnly=cDate.toLocaleTimeString('en-US',dateOptions);const currTime=timeOnly.split(':');const h=currTime[0];const m=currTime[1];const ampm=currTime[2].split(' ')[1];const displayTime=h+':'+m+' '+ampm;let timeLabel='';let bannerId=1;if((h==12||h<5)&&ampm=='PM'){timeLabel='Good Afternoon';bannerId=2;}else if((h>=5&&ampm=='PM')||((h==12||h<3)&&ampm=='AM')){timeLabel='Good Evening';bannerId=3;}else{timeLabel='Good Morning';bannerId=1;}
let biltCurrentTime={displayTime:displayTime,greetingLabel:timeLabel,hour:h,hrId:ampm,bannerId:bannerId};$('.current-bh-time')[0].textContent=biltCurrentTime.displayTime;return biltCurrentTime;}